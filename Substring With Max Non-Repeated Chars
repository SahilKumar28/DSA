class Solution {
public:
    int lengthOfLongestSubstring(string s) {
        unordered_map<char, int> m;
        int l = 0, r = 0, n = s.size();
        int maxLength = 0;
        while (r < n) {
            if (m.find(s[r]) != m.end() && m[s[r]] >= l && m[s[r]] <= r) {
                l = m[s[r]] + 1;
            }
                maxLength = max(maxLength, r - l + 1);
                m[s[r]] = r;
                r++;
        }
        return maxLength;
    }
};
